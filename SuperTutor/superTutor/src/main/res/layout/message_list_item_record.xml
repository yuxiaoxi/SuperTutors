<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        android:id="@+id/message_linear_system_message"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="59dp" >

            <net.duohuo.dhroid.view.megwidget.CircleImageView
                android:id="@+id/ztgame_img_friends_listitem_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                 />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ztgame_linear_friends_listitem_liner"
            android:layout_width="fill_parent"
            android:layout_height="59dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ztgame_txt_friends_listitem_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:gravity="left|center"
                    android:text="小班一班"
                    android:textColor="#3D4245"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ztgame_txt_friends_listitem_lasttime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="12:51"
                    android:textColor="@color/message_item_time_txt"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ztgame_txt_friends_listitem_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="不作死就不会死"
                    android:layout_weight="1"
                    android:textColor="@color/message_item_content_txt"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/paopao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/red"
                    android:gravity="center"
                    android:text="0"          
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </LinearLayout>

            
        </LinearLayout>
    </LinearLayout>
    <View
                android:layout_width="match_parent"
                android:layout_height="0.67dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#E6E6E6"/>

</LinearLayout>