<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <net.duohuo.dhroid.view.megwidget.CircleImageView
            android:id="@+id/login_img_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/login_img_add_avatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/login_img_avatar"
            android:layout_marginTop="60dp"
            android:src="@drawable/add_avatar" />

        <TextView
            android:visibility="gone"
            android:id="@+id/login_txt_add_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/login_img_add_avatar"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/login_img_add_avatar"
            android:text="添加头像"
            android:textColor="@color/app_style"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/login_edite_phone"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/set_line"
                android:hint="帐号"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/login_edite_password"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/set_line"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/login_txt_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="注册"
            android:textColor="@color/app_style"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/register_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/registe_edite_phone"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/set_line"
                android:hint="手机号码"
                android:phoneNumber="true"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/registe_edite_code"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/set_line"
                android:hint="输入验证码"
                android:layout_weight="1"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/registe_btn_getcode"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/set_rigist_code"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:singleLine="true"
                android:textColor="@color/white" />
        </LinearLayout>
		 <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/registe_edite_password"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/set_line"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/registe_edite_pswack"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/set_line"
                android:hint="再次输入密码"
                android:password="true"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black" />
        </RelativeLayout>
        <TextView
            android:id="@+id/registe_btn_registe"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="立即注册"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/registe_txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="登录"
            android:textColor="@color/app_style"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/line_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="直接登录"
            android:textColor="@color/line_bg"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/line_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sina_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:src="@drawable/skyblue_logo_sinaweibo_checked" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/weixin_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/skyblue_logo_wechat_checked" />

        <ImageView
            android:id="@+id/qqzone_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:src="@drawable/skyblue_logo_qq_checked" />
    </LinearLayout>

</LinearLayout>