<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <net.duohuo.dhroid.view.megwidget.CircleImageView
            android:id="@+id/fans_focus_listitem_img_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/qyx" >
        </net.duohuo.dhroid.view.megwidget.CircleImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fans_focus_listitem_txt_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="余老湿"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fans_focus_listitem_txt_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:paddingLeft="0dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="陕西省西安市西安交通大学"
                    android:textColor="#787878"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:text="课时费："
                    android:textColor="@color/app_style"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fans_focus_listitem_txt_salary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="0dp"
                    android:paddingRight="5dp"
                    android:text="50元/时"
                    android:textColor="@color/app_style"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fans_focus_listitem_txt_createtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="4分钟前"
                    android:singleLine="true"
                    android:textColor="#787878"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />

</LinearLayout>